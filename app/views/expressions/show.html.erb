<div class="main-bar">
  <div class="show-expression">
    <h2>正規表現</h2>
    <div class="show-name">
      <%= @expression.name %>
    </div>
    <h2>解説</h2>
    <div class="show-text">
      <%= @expression.text %>
    </div>
    <% if @expression.url_text.present?%>
      <div class="show-url">
        <%= link_to "参考にしたサイト", @expression.url_text, class:"link expression-url"  %>
      </div>
    <% end %>
    <% if user_signed_in? && current_user.id == @expression.user_id %>
      <%= link_to "編集する", edit_expression_path, class:"post edit-btn" %>
      <%= link_to "削除する", expression_path(@expression.id), method: :delete, class:"post delete-btn" %>
    <% end %>
  </div>
    <ul class="lists" id="lists">
    <li><%= link_to "日記",  diaries_path, class:"list" %></li>
    <li><%= link_to "メソッド", manners_path, class:"list"  %></li>
    <li><%= link_to "オプション", options_path, class:"list"  %></li>
    <li><%= link_to "正規表現", expressions_path, class:"list"  %></li>
  </ul>
</div>