<div class="main-bar">
  <div class="search-manners">
    <%= form_with(url: search_manners_path, local: true, method: :get, class: "search-form") do |f| %>
      <%= f.text_field :keyword, placeholder: "検索する", class: "search-input" %>
      <%= f.submit "検索", class: "search-btn" %>
    <% end %>
    <div class="contents row">
      <% if @manners.present? %>
        <% @manners.each do |manner| %>
          <div class="manner">
            <%= link_to manner_path(manner.id), class:"link manner-name" do %>
            <%= manner.name %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        検索結果がありません
      <% end %>
    </div>
    <%= link_to "メソッドを追加", new_manner_path, class:"post post-btn" %>
  </div>
    <ul class="lists" id="lists">
    <li><%= link_to "日記",  diaries_path, class:"list" %></li>
    <li><%= link_to "メソッド", manners_path, class:"list"  %></li>
    <li><%= link_to "オプション", options_path, class:"list"  %></li>
    <li><%= link_to "正規表現", expressions_path, class:"list"  %></li>
  </ul>
</div>