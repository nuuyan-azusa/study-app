<%= render partial: "shared/header" %>
<div class="main-bar">
  <%= render partial: "shared/side-bar" %>
  <div class="show-manner">
    <h2>メソッド名</h2>
    <div class="show-name">
      <%= @manner.name %>
    </div>
    <h2>解説</h2>
    <div class="show-text">
      <%= @manner.text %>
    </div>
    <% if @manner.url_text.present?%>
      <div class="show-url">
        <%= link_to "参考にしたサイト", @manner.url_text, class:"link manner-url"  %>
      </div>
    <% end %>
    <% if user_signed_in? && current_user.id == @manner.user_id %>
      <%= link_to "編集する", edit_manner_path, class:"post edit-btn" %>
      <%= link_to "削除する", manner_path(@manner.id), method: :delete, class:"post delete-btn" %>
    <% end %>
  </div>
</div>