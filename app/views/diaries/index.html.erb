<div class="main-bar">
  <div class="index-diaries">
    <% if @diaries.present? %>
      <%= form_with(url: search_diaries_path, local: true, method: :get, class: "search-form") do |f| %>
        <%= f.text_field :keyword, placeholder: "検索する", class: "search-input" %>
        <%= f.submit "検索", class: "search-btn" %>
      <% end %>
      <div class="contents row">
        <% @diaries.each do |diary| %>
          <div class="diary">
            <%= diary.year.name %>年
            <%= diary.month.name %>月
            <%= diary.day.name %>日
            <%= link_to "#{diary.title}", diary_path(diary.id), class:"link diary-title"  %>
          </div>
        <% end %>
      </div>
    <% else %>
      日記を作成してください
    <% end %>
    <%= link_to "日記を追加", new_diary_path, class:"post post-btn" %>
  </div>
</div>
