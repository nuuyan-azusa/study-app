<%= render partial: "shared/header" %>
<div class="main-bar">
  <%= render partial: "shared/side-bar" %>
  <div class="index-diaries">
    <% @diaries.each do |diary| %>
      <div class="diary">
        <%= diary.year.name %>年
        <%= diary.month.name %>月
        <%= diary.day.name %>日
        <%= link_to "#{diary.title}", diary_path(diary.id), class:"link diary-title"  %>
      </div>
    <% end %>
    <%= link_to "日記を追加", new_diary_path, class:"post post-btn" %>
  </div>
</div>
